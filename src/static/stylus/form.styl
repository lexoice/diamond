.form
	text-align center
	border 3px solid #c5a96f
	padding 20px 0px 60px 0px
	margin-bottom 90px
	margin-top 90px
	& h2
		font-size 42px
		line-height 48px
		padding-left 90px
		padding-right 90px
		font-family 'Gotham Pro'
	& input
		border 1px solid #109a8c
		border-radius 3px
		padding 10px 50px
		margin-right 30px
		text-align center
	& button
		padding 0
		margin 0
		cursor pointer
		border none
		font-family: 'Proxima Nova Sm'
		text-transform uppercase
		color #fff
		font-size 16px
		padding 12px 50px
		border-radius 5px
		text-decoration none
		background #3aaa9b
		background linear-gradient(145deg, #41aea1, #0d998d)