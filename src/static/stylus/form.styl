.form
	text-align center
	border 3px solid #c5a96f
	padding 20px 0px 65px 0px
	margin-bottom 130px
	margin-top 90px
	& h2
		font-size 40px
		line-height 48px
		padding-left 60px
		padding-right 60px
		font-family 'Gotham Pro'
	&__sub-title
		color #129a8c
		font-size 40px
		line-height 48px
	& input
		border 1px solid #109a8c
		border-radius 3px
		padding 15px 48px
		margin-right 30px
		text-align center
	& button
		padding 0
		margin 0
		cursor pointer
		border none
		font-family: 'Proxima Nova Sm'
		text-transform uppercase
		color #fff
		font-size 16px
		padding 16px 62px
		border-radius 5px
		text-decoration none
		background #3aaa9b
		background linear-gradient(145deg, #41aea1, #0d998d)


@media (max-width: 760px)
	.form
		margin 0 15px
		& h2
			padding 0
	input
		width 95%
		margin 10px