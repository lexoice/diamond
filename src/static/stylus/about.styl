.about
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	&__photo
		padding-right 70px
	&__desc
		border-bottom 3px solid #af8554
		border-right 3px solid #af8554
		padding-bottom 95px
		padding-left 22px
	&__title
		color #109a8c
		font-size 30px
		line-height 24px
		font-weight normal
		position relative
		padding-top 57px
		padding-left 24px
		&:before
			content: '';
			background: #af8554;
			width: 120px;
			height: 3px;
			position: absolute;
			bottom: -43px;
	&__sub-title
		font-family 'Gotham Pro'
		color #404040
		font-size 44px
		line-height 24px
		padding-top: 42px;
	&__text
		font-size 18px
		line-height 24px
		padding-right 120px
	&__list
		padding 0
		& li
			display inline-block
			margin-right 25px
			font-family 'Proxima Nova Sm'
			padding-left 20px
			font-size 20px
			background url(../img/dot.png) 4px 4px no-repeat


	&__futures
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		padding-left 90px
		padding-right 90px
		list-style-type none
		justify-content space-between
		margin-top 90px
		margin-bottom 90px
		text-align center
		font-family 'Gotham Pro'
		font-size 24px
		line-height 24px
		color #404040
		& strong
			display block
			font-size 48px
			line-height 48px
			font-weight bold



@media (max-width: 760px)
	.about
		flex-direction column
	.about__photo
		display none
	.about__desc
		width 100%
	.about__futures
		flex-direction column
	.about__text
		padding-right 5px


